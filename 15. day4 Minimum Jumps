    int minJumps(vector<int>& arr) {
        // code here
           int n=arr.size();
        
        if(arr[0]==0){
            return -1;
        }
        
        int i=n-1;
        int count=0;

        while(i>0){
            int flag=0;
            for(int j=0;j<i;j++){
                if(arr[j]+j>=i){
                    i=j;
                    flag=1;
                    break;
                }
            }
            if(flag==0){
                return -1;
            }
            count++;
        }
        return count;  
    }
